@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xml: <http://www.w3.org/XML/1998/namespace> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix dcat: <http://www.w3.org/ns/dcat#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix time: <http://www.w3.org/2006/time#> .
@prefix unit: <https://qudt.org/vocab/unit/> .
@prefix vann: <http://purl.org/vocab/vann/> .
@prefix voaf: <http://purl.org/vocommons/voaf#> .
@prefix sched: <https://w3id.org/omega-x/SchedulingOntology#> .
@prefix omegax: <https://w3id.org/omega-x/> .
@prefix role: <https://w3id.org/omega-x/EnergyRoleOntology/>.
@prefix ets: <https://w3id.org/omega-x/EventTimeSeriesOntology/> .
@prefix prop: <https://w3id.org/omega-x/PropertyOntology/> .
@prefix infra: <https://w3id.org/omega-x/InfrastructureOntology/> .
@prefix time: <http://www.w3.org/2006/time#> .
@prefix schema: <http://schema.org/> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@base <https://w3id.org/omega-x/SchedulingOntology#> .

<https://w3id.org/omega-x/SchedulingOntology> rdf:type owl:Ontology ;                                          
                                               dcterms:creator <https://omega-x.eu/> ;
                                               dcterms:description "This Scheduling Ontology helps to represent a schedule, which organizes and arranges events or activities according to specific dates, times, and other relevant parameters."@en ;
                                               dcterms:issued "2024-15-03"^^xsd:date ;
                                               dcterms:license <https://www.apache.org/licenses/LICENSE-2.0> ;
                                               dcterms:modified "2024-09-04"@en ;
                                               dcterms:title "Scheduling Ontology"@en ;
                                               vann:preferredNamespacePrefix "sched" ;
                                               vann:preferredNamespaceUri omegax:sched ;
                                               rdfs:label "Scheduling Ontology"@en ;                                           
                                               dcat:contactPoint "henon.lamboro@trialog.com" ;
                                               owl:versionIRI <https://w3id.org/omega-x/SchedulingOntology-0.1> ;
                                               owl:versionInfo "v0.1" .

#################################################################
#    Annotation properties
#################################################################


dcterms:creator rdf:type owl:AnnotationProperty .
dcterms:description rdf:type owl:AnnotationProperty .
dcterms:issued rdf:type owl:AnnotationProperty .
dcterms:license rdf:type owl:AnnotationProperty .
dcterms:modified rdf:type owl:AnnotationProperty .
dcterms:title rdf:type owl:AnnotationProperty .
vann:preferredNamespacePrefix rdf:type owl:AnnotationProperty .
vann:preferredNamespaceUri rdf:type owl:AnnotationProperty .
dcat:contactPoint rdf:type owl:AnnotationProperty .


#################################################################
#    Classes
#################################################################
   

###  https://w3id.org/omega-x/SchedulingOntology#Periodicity
sched:Periodicity rdf:type owl:Class ;
                  rdfs:comment "A periodicity represents the fact that a schedule being regularly recurrent having periods like hourly, weekly, etc. "@en ;
                  rdfs:label "periodicity"@en ;
                  rdfs:subClassOf [ rdf:type owl:Class ;
                                      owl:oneOf ( sched:hourly
                                                  sched:quarterhourly
                                                  sched:96quarterhourly
                                                  sched:daily
                                                  sched:weekly
                                                  sched:monthly
                                                )
			                    ].

###  https://w3id.org/omega-x/SchedulingOntology#Schedule
sched:Schedule rdf:type owl:Class ;
               rdfs:subClassOf [ rdf:type owl:Restriction ;
                                      owl:onProperty sched:hasTimePeriod ;
                                      owl:qualifiedCardinality "1"^^xsd:nonNegativeInteger ;
                                      owl:onClass time:DateTimeInterval
                                    ] ;
               rdfs:comment "A schedule represents the activity of interest when an event or a task is occurring or expected to happen."@en ;
               rdfs:label "schedule"@en .


###  https://w3id.org/omega-x/SchedulingOntology#ScheduleStatus
sched:ScheduleStatus rdf:type owl:Class ;
                     rdfs:comment "A schedule status represents the status of a schedule, such as on time, delayed, or canceled."@en ;
                     rdfs:label "schedule status"@en ;
                     rdfs:subClassOf [ rdf:type owl:Class ;
                                      owl:oneOf ( sched:active
                                                  sched:cancelled
                                                  sched:inProgress
                                                  sched:pending
                                                  sched:compeleted                                                  
                                                )
			                        ].

###  https://w3id.org/omega-x/SchedulingOntology#Scheduler
sched:Scheduler rdf:type owl:Class ;
                rdfs:comment "A scheduler is an entity responsible for managing and organizing the events or the tasks within a schedule. This entity can be either a person or a machine."@en ;
                rdfs:label "scheduler"@en .

###  http://www.w3.org/2006/time#DateTimeInterval
time:DateTimeInterval rdf:type owl:Class .


#################################################################
#    Object Properties
#################################################################

###  https://w3id.org/omega-x/SchedulingOntology#hasPeriodicity
sched:hasPeriodicity rdf:type owl:ObjectProperty ;
                     rdfs:domain sched:Schedule ;
                     rdfs:range sched:Periodicity .


###  https://w3id.org/omega-x/SchedulingOntology#hasStatus
sched:hasStatus rdf:type owl:ObjectProperty ;
                rdfs:domain sched:Schedule ;
                rdfs:range sched:ScheduleStatus .

###  https://w3id.org/omega-x/SchedulingOntology#isScheduledBy
sched:isScheduledBy rdf:type owl:ObjectProperty ;
                    rdfs:domain sched:Schedule ;
                    rdfs:range sched:Scheduler .

###  https://w3id.org/omega-x/SchedulingOntology#isScheduledBy
sched:includesScheduleData rdf:type owl:ObjectProperty ;
                    rdfs:domain sched:Schedule ;
                    rdfs:range ets:ValueSet.

###  https://w3id.org/omega-x/SchedulingOntology#isScheduledBy
sched:isScheduledAbout rdf:type owl:ObjectProperty ;
                    rdfs:domain sched:Schedule ;
                    rdfs:range prop:Property .

###  https://w3id.org/omega-x/SchedulingOntology#isScheduledBy
sched:isScheduledFor rdf:type owl:ObjectProperty ;
                    rdfs:domain sched:Schedule ;
                    rdfs:range infra:System .

###  https://w3id.org/omega-x/SchedulingOntology#hasTimePeriod
sched:hasTimePeriod rdf:type owl:ObjectProperty ;
                  rdfs:domain sched:Schedule ;
                  rdfs:range time:DateTimeInterval .   

#################################################################
#    Data properties
#################################################################

###  http://www.w3.org/2001/XMLSchema#date
xsd:date rdf:type rdfs:Datatype .

###  https://w3id.org/omega-x/SchedulingOntology#scheduleId
sched:scheduleId rdf:type owl:DatatypeProperty ;
                 rdfs:domain sched:Schedule ;
                 rdfs:range xsd:string .

###  https://w3id.org/omega-x/SchedulingOntology#scheduleType
sched:scheduleType rdf:type owl:DatatypeProperty ;
                  rdfs:domain sched:Schedule ;
                  rdfs:range xsd:string .

###  https://w3id.org/omega-x/SchedulingOntology#scheduledOn
sched:scheduledOn rdf:type owl:DatatypeProperty ;
                  rdfs:domain sched:Schedule ;
                  rdfs:range xsd:dateTime .              

###  https://w3id.org/omega-x/SchedulingOntology#schedulerId
sched:schedulerId rdf:type owl:DatatypeProperty ;
                  rdfs:domain sched:Scheduler ;
                  rdfs:range xsd:string .

role:MarketParticipant rdf:type owl:class;
                       rdfs:isDefinedBy role:;
                       rdfs:subClassOf sched:Scheduler .

#################################################################
#    Individuals
#################################################################


### Schedule Status

sched:active rdf:type owl:NamedIndividual , sched:ScheduleStatus.
sched:cancelled rdf:type owl:NamedIndividual , sched:ScheduleStatus.
sched:inProgress rdf:type owl:NamedIndividual , sched:ScheduleStatus.
sched:compeleted rdf:type owl:NamedIndividual , sched:ScheduleStatus.
sched:pending rdf:type owl:NamedIndividual , sched:ScheduleStatus.

### Periodicity

sched:hourly rdf:type owl:NamedIndividual , sched:Periodicity.
sched:quarterhourly rdf:type owl:NamedIndividual , sched:Periodicity.
sched:96quarterhourly rdf:type owl:NamedIndividual , sched:Periodicity.
sched:daily rdf:type owl:NamedIndividual , sched:Periodicity.
sched:weekly rdf:type owl:NamedIndividual , sched:Periodicity.
sched:monthly rdf:type owl:NamedIndividual , sched:Periodicity.
